#CrmAsEvent@Search
--CrmAsEvent@SearchSELECT 'N' AS CHK     , A.MNGT_NO        , A.REQ_SVC
     , (SELECT MAX(Z.CD_NM) FROM MDM_COM_CODE Z WHERE Z.GRP_CD = 'T02' AND Z.COMN_CD = A.REQ_SVC) AS REQ_SVC_NM     , (SELECT Z.CUST_LOC_NM FROM CRM_CUST_MST Z WHERE Z.CUST_CD = A.CUST_CD) AS CUST_NM             , TO_CHAR(TO_DATE(A.REQ_YMD,'yyyyMMdd'),'YYYY-MM-DD')||' '||SUBSTR(A.REQ_HM,1,2)||':'||SUBSTR(A.REQ_HM,3,2) AS REQ_DATE     , A.PROC_TYPE     , (SELECT (CASE WHEN Z.SUBJECT IS NOT NULL THEN '제목:'||TRIM(Z.SUBJECT)||CHR(13)||CHR(10)||'내용:' END) FROM CRM_AS_CUST Z WHERE Z.MNGT_NO = A.MNGT_NO AND ROWNUM = 1)||A.CONTENT AS CONTENT     , A.CMPT_RMK     , A.RMK     , A.REQ_USR                                                , A.TEL_NO                    , NVL((SELECT Z.LOC_NM FROM CRM_USR_MST Z WHERE Z.LOC_NM = A.INS_USR AND ROWNUM = 1),A.INS_USR) AS INS_USR     , TO_CHAR(TO_DATE(A.INS_YMD,'YYYYMMDD'),'YYYY-MM-DD') || ' ' ||       TO_CHAR(TO_DATE(A.INS_HM,'HH24MISS'), 'HH24:MI:SS') AS INS_DATE     , NVL((SELECT Z.LOC_NM FROM CRM_USR_MST Z WHERE Z.LOC_NM = A.UPD_USR AND ROWNUM = 1),A.UPD_USR) AS UPD_USR     , TO_CHAR(TO_DATE(A.UPD_YMD,'YYYYMMDD'),'YYYY-MM-DD') || ' ' ||       TO_CHAR(TO_DATE(A.UPD_HM,'HH24MISS'), 'HH24:MI:SS') AS UPD_DATE  FROM CRM_AS_MST A   WHERE 1=1    [REQ_YMD]            [FM_YMD]               AND A.REQ_YMD >= '@FM_YMD'            [/FM_YMD]            [TO_YMD]               AND A.REQ_YMD <= '@TO_YMD'            [/TO_YMD]    [/REQ_YMD]         [CMPT_YMD]             [FM_YMD]               AND A.CMPT_YMD >= '@FM_YMD'            [/FM_YMD]            [TO_YMD]               AND A.CMPT_YMD <= '@TO_YMD'            [/TO_YMD]    [/CMPT_YMD]     [PROC_TYPE]       AND A.PROC_TYPE IN ('@PROC_TYPE')    [/PROC_TYPE]    [REQ_SVC]       AND A.REQ_SVC = '@REQ_SVC'    [/REQ_SVC]ORDER BY A.REQ_YMD DESC, A.REQ_HM DESC, A.MNGT_NO DESC
#CrmAsEvent@Update
--CrmAsEvent@UpdateUPDATE CRM_AS_MST    SET RMK = '@RMK'     , CMPT_RMK = '@CMPT_RMK'     , CMPT_YMD = TO_CHAR(SYSDATE,'YYYYMMDD')        , CMPT_HM = TO_CHAR(SYSDATE,'HH24MISS')     , WORK_USR = '@WORK_USR'     , PROC_TYPE = '2'     , ONLINE_YN = 'A' WHERE MNGT_NO = '@MNGT_NO'
